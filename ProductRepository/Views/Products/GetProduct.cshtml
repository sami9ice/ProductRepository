
@{
    ViewBag.Title = "GetProduct";

}

<h2>GetProduct</h2>
<table id="productTB" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Product Price</th>
            <th>Category </th>
        </tr>
    </thead>

</table>

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
@section scripts
{
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(function () {
            var dataTable = $('#productTB').DataTable({
                //configuration settings for the table
                "ajax": {
                    "url": "/api/product/list",
                    "type": "GET",
                    "dataType": "json",
                    "dataSrc": "" //render as array not json
                },
                "columns":
                    [
                        { "data": "Id" },
                        { "data": "Name" },
                        { "data": "Description" },
                        { "data": "Price" },
                        { "data": "Cartegory.CartegoryName" },

                    ],

                "language": {
                    "emptyTable": "Table is empty"
                }
            });
        });
    </script>
}

